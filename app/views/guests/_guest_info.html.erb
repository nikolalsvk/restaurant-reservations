<div class="col-md-4">
  <div class="panel panel-success">
    <div class="panel-body">
      <div class="text-center">
        <%= image_tag gravatar_url(@guest.email, 256) %>
      </div>

      <div><br></div>

      <p>
        <strong>First name:</strong>
        <%= @guest.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @guest.last_name %>
      </p>

      <p>
        <strong>Phone number:</strong>
        <%= @guest.phone_number %>
      </p>

      <% if @guest.lat %>
      <p>
        <strong>Address:</strong>
        <%= reverse_geocode(@guest) %>
      </p>
      <% end %>

      <p>
        <strong>Email:</strong>
        <%= @guest.email %>
      </p>

      <p>
        <strong>Visits:</strong>
        <%= @guest.reviews.count %>
      </p>

    </div>
    <div class="panel panel-footer text-center">
      <%= link_to "Edit my profile",
                  edit_guest_path(current_user),
                  :class => "btn btn-primary" if @guest.id == current_user.id %>
    </div>
  </div>
</div>
